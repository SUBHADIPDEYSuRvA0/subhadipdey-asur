<div id="chatbot-widget">
    <button id="open-chatbot">
        <img src="/public/images/chatbot-icon.png" alt="Chatbot" />
    </button>
    <div id="chatbot-dialog" class="hidden">
        <div class="chatbot-header">
            <span>AI Chat</span>
            <button id="close-chatbot">&times;</button>
        </div>
        <div class="chatbot-body" id="chatbot-messages">
            <div class="bot-msg">Hi! Ask me anything about this portfolio or tech.</div>
        </div>
        <form id="chatbot-form">
            <input type="text" id="chatbot-input" placeholder="Type a message..." autocomplete="off" required>
            <button type="submit"><i class="fa fa-paper-plane"></i></button>
        </form>
    </div>
</div>